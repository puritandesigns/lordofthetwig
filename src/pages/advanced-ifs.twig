{% extends 'page.twig' %}

{% block content %}
{% set location = 'weathertop' %}
{% set ring_wraiths = 5 %}

<h2>More If Statement Possibilities</h2>

<h3>Combining if statements with ands and ors </h3>

<pre><code>{% verbatim %}
{% if location == 'weathertop' and ring_wraiths > 5 %}
    Frodo will be captured.
{% else %}
    Frodo will escape.
{% endif %}

{% set gandalf = {
    job: 'Wizard',
    friends: {
        count: 8,
        status: 'in mortal danger'
    }
} %}
{% if location == 'moria' or gandalf.friends.status == 'in mortal danger' %}
    Gandalf will sacrifice himself.
{% endif %}
{% endverbatim %}
</code></pre>

<div class="well">
    <p>
    {% if location == 'weathertop' and ring_wraiths > 5 %}
        Frodo will be captured.
    {% else %}
        Frodo will escape.
    {% endif %}
    </p>
    {% set gandalf = {job: 'Wizard', friends: {count: 8, status: 'in mortal danger'}} %}
    {% if location == 'moria' or gandalf.friends.status == 'in mortal danger' %}
        <p>Gandalf will sacrifice himself.</p>
    {% endif %}
</div>

<h3>Working with strings (length, starts/ends with)</h3>
<pre><code>{% verbatim %}
{% set hobbit = 'frodo' %}
{% if hobbit|length == 5 and (hobbit starts with 'f' or hobbit ends with 'o') %}
    The Hobbit is Frodo
{% endif %}
{% endverbatim %}
</code></pre>
{% set hobbit = 'frodo' %}
{% if hobbit|length == 5 and (hobbit starts with 'f' or hobbit ends with 'o') %}
    <p class="well">The Hobbit is Frodo</p>
{% endif %}

<h3>Working with numbers (odd/even and divisble by)</h3>

<pre><code>{% verbatim %}
{% set fellowship = 9 %}
{% if fellowship|length == 9 or fellowship is odd %}
    <p class="well">Boromir has not fallen yet.</p>
{% elseif fellowship is odd %}
    Alas for Boromir the Brave!
{% endif %}
{% endverbatim %}
</code></pre>

{% set fellowship = 9 %}
{% if fellowship|length == 9 or fellowship is odd %}
    <p class="well">Boromir has not fallen yet.</p>
{% endif %}

<h3>Working with arrays (iterable, length, in)</h3>
<pre><code>{% verbatim %}
{% set fellowship = [
    'frodo',
    'sam',
    'merry',
    'pippin',
    'aragorn',
    'gandalf',
    'boromir',
    'legolas',
    'gimli'
] %}
{# if not sure if fellowship is an array or number... #}
{% if fellowship is iterable and (fellowship|length == 9 or 'boromir' in fellowship) %}
    <p class="well">Boromir has not fallen yet.</p>
{% endif %}
{% endverbatim %}
</code></pre>

{% set fellowship = [
    'frodo', 'sam', 'merry', 'pippin', 'aragorn', 'gandalf', 'boromir', 'legolas', 'gimli'
] %}
{% if fellowship is iterable and fellowship|length == 9 and 'boromir' in fellowship %}
    <p class="well">Boromir has not fallen yet.</p>
{% endif %}

